/* SETTINGS */

primary-color = #365940
bgcolor = #F6F4F4
menu-bgcolor = #363030
menu-color = white
fontcolor = #221C1C
primary-font = 'Roboto', sans-serif
gutter-md = 15px
gutter-lg = 30px



/* BASE */

*
html
body
    margin 0
    padding 0
    box-sizing border-box

html
body
    height 100%  

body
    background bgcolor
    color fontcolor
    font-family primary-font
    font-size 16px

ul
ol
    list-style none

a
    &:visited
        color primary-color
    &:hover
        color font-color    

/* LAYOUT */

main
    height 100%

#logo
    background primary-color
    margin -(gutter-md)
    padding gutter-md
    margin-bottom gutter-lg
    font-size 2rem
    font-weight 700
    span
        font-weight 400
    
#menu 
    background menu-bgcolor
    color menu-color
    padding gutter-md
    width 300px
    height 100%
    position fixed
    ul
        margin -(gutter-md)
        li
            a
                display block
                color menu-color
                padding 7.5px 15px

#content
    height 100%
    margin-left 300px
    padding gutter-md

    #kanban
        display flex
        height 100%
        .column
            flex 1
            border-right 1px solid #E3DDDD
            height 100%
            padding gutter-md
            min-width 300px
            &:last-of-type
                border none
            h2
                text-align center
                margin 0 0 30px
            .task
                margin 15px 0
                background #fff
                box-shadow 0 0 10px rgba(0,0,0,.1)   
                padding gutter-md
                border-radius 5px
                min-height 100px
                cursor pointer
                h3



